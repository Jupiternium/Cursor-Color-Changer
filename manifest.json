{
    "manifest_version": 3,
    "name": "Cursor Color Changer",
    "version": "1.0",
    "description": "Changes the mouse cursor color to match the hovered element.",
    "permissions": ["activeTab"],
    "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    },
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    }
    
  }
  